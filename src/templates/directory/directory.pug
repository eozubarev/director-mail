section.directory 
    .directory__container.container 
        .directory__top 
            .directory__top-logos 
                .directory__logo
                    a(href="http://ekodar.ru" target="_blank") 
                        img.directory__logo(src="./images/director/ekodar-logo.png", alt="Логотип компании Ekodar")
                .logo
                    a(href="http://ecomaster.ru" target="_blank") 
                        img.directory__logo(src="./images/director/ecomaster-logo.png", alt="Логотип компании Ecomaster")

            .directory__top-info 
                .directory__title.title
                    h1 Письмо директору компании
